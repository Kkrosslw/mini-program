
page{
  background-color: #ebebeb;
}
.nav{
width:150rpx;
}
.btns {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  display: flex;
  width: 100%;
  height: 84rpx;
  flex-wrap: nowrap;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.scroll{
  margin-top: 85rpx;
}

.btns .nav_btn {
  flex-shrink: 0;
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
  color: #333;
  font-size: 34rpx;
  border-bottom: 4rpx solid #fff;
}

.btns .nav_btn.selected {
  border-bottom: 4rpx solid #dd258a;
  color: #dd258a;
}

.scroll .ball_btns {
  width: 450rpx;
  height: 50rpx;
  display: flex;
  margin: 20rpx auto;
  align-items: center;
  flex-wrap: nowrap;
}

.scroll .ball_btns .ballbtn {
  flex: 1;
  background-color: #fff;
  font-size: 30rpx;
  color: #36b9af;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 2rpx solid #36b9af;
}

.scroll .ball_btns .left {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.scroll .ball_btns .right {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.scroll .ball_btns .ballbtn.selected {
  color: #fff;
  background-color: #36b9af;
}

.good-item {
 display: flex;
 width: 100%;
 padding: 10px;
 padding-left: 10px;
 border-bottom: 1px solid #eee;
 margin-top: 10rpx;
}
.good-image {
  display: flex;
 width: 50%;
 border: 2rpx solid #eee;
 border-radius: 15rpx;
}
.good-image image{
  width: 90%;
}
.good-detail {
 font-size: 14px;
 margin-left: 10px;
 display: flex;
 width: 80%;
 flex-direction: column;
}


